<?xml version="1.0"?>
<root>
    <appdef>
        <appname>YoruFukurou</appname>
        <equal>com.YoruFukurouProject.YoruFukurou</equal>
    </appdef>
    <appdef>
        <appname>iTerm2</appname>
        <equal>com.googlecode.iterm2</equal>
    </appdef>

    <devicevendordef>
        <vendorname>ELECOM_Mouse</vendorname>
        <vendorid>0x056e</vendorid>
    </devicevendordef>

    <item>
        <name>âŒ˜+Space typed, also type eisuu for Alfred</name>
        <identifier>private.command_space_eisuu</identifier>
        <autogen>
            --KeyToKey-- KeyCode::SPACE, ModifierFlag::COMMAND_L,

            KeyCode::JIS_EISUU,
            KeyCode::SPACE, ModifierFlag::COMMAND_L
        </autogen>
    </item>

    <item>
        <name>Mouse Settings</name>

        <item>
            <name>Reverse scroll wheel in mouse.</name>
            <identifier>private.remap.reverse_mouse_scrolling</identifier>
            <device_only>DeviceVendor::ELECOM_Mouse</device_only>
            <autogen>
                __FlipScrollWheel__
                Option::FLIPSCROLLWHEEL_VERTICAL,
            </autogen>
        </item>
        <item>
            <name>SubMouseButton</name>
            <identifier>remap.submouse_button</identifier>
            <autogen>
                --PointingButtonToKey--
                PointingButton::BUTTON4,

                KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L
            </autogen>
            <autogen>
                --PointingButtonToKey--
                PointingButton::BUTTON5,

                KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L
            </autogen>
        </item>
    </item>

    <item>
        <name>key bind YoruFukurou</name>
        <item>
            <name>`I`nsert new tweet</name>
            <identifier>private.yorufukurou.insert</identifier>
            <only>YoruFukurou</only>
            <uielementrole_only>AXTable</uielementrole_only>
            <autogen>
                --KeyToKey--
                KeyCode::I, ModifierFlag::NONE,

                KeyCode::N, ModifierFlag::COMMAND_L
            </autogen>
        </item>
        <item>
            <name>`Y`ank text</name>
            <identifier>private.yorufukurou.yank</identifier>
            <only>YoruFukurou</only>
            <uielementrole_only>AXTable</uielementrole_only>
            <autogen>
                --KeyToKey--
                KeyCode::Y, ModifierFlag::NONE,

                KeyCode::C, ModifierFlag::COMMAND_L
            </autogen>
        </item>
        <item>
            <name>back to home `U` key</name>
            <identifier>private.yorufukurou.undo</identifier>
            <only>YoruFukurou</only>
            <uielementrole_only>AXTable</uielementrole_only>
            <autogen>
                --KeyToKey--
                KeyCode::U, ModifierFlag::NONE,

                KeyCode::ESCAPE
            </autogen>
        </item>
        <item>
            <name>`O`pen Talk view</name>
            <identifier>private.yorufukurou.open</identifier>
            <only>YoruFukurou</only>
            <uielementrole_only>AXTable</uielementrole_only>
            <autogen>
                --KeyToKey--
                KeyCode::O, ModifierFlag::NONE,

                KeyCode::3, ModifierFlag::COMMAND_R
            </autogen>
        </item>
        <item>
            <name>top to g</name>
            <identifier>private.app_yorufukurou_top_g</identifier>
            <only>YoruFukurou</only>
            <uielementrole_only>AXTable</uielementrole_only>
            <autogen>
                --KeyToKey--
                KeyCode::G, ModifierFlag::NONE,

                KeyCode::0
            </autogen>
        </item>
        <item>
            <name>Disable BS</name>
            <identifier>private.yorufukurou.disable_bs</identifier>
            <only>YoruFukurou</only>
            <autogen>
                --KeyToKey--
                KeyCode::DELETE, ModifierFlag::NONE,

                KeyCode::VK_NONE
            </autogen>
        </item>
    </item>

    <item>
        <name>Disable keys in iTerm2</name>
        <item>
            <name>Disable Enter</name>
            <identifier>private.iterm.disable_enter</identifier>
            <only>iTerm2</only>
            <autogen>
                --KeyToKey--
                KeyCode::RETURN, ModifierFlag::NONE,

                KeyCode::VK_NONE
            </autogen>
        </item>
        <item>
            <name>Disable Tab</name>
            <identifier>private.iterm.disable_tab</identifier>
            <only>iTerm2</only>
            <autogen>
                --KeyToKey--
                KeyCode::TAB, ModifierFlag::NONE,

                KeyCode::VK_NONE
            </autogen>
        </item>
        <item>
            <name>Disable BS</name>
            <identifier>private.iterm.disable_bs</identifier>
            <only>iTerm2</only>
            <autogen>
                --KeyToKey--
                KeyCode::DELETE, ModifierFlag::NONE,

                KeyCode::VK_NONE
            </autogen>
        </item>
    </item>

</root>
